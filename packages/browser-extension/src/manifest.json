{
  "manifest_version": 3,
  "name": "Cookie Dialog Monster Mobile",
  "version": "9.0.0",
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "assets/icons/16.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  },
  "action": {
    "default_icon": "assets/icons/off.png",
    "default_popup": "popup.html",
    "default_title": "Cookie Dialog Monster Mobile"
  },
  "options_page": "options.html",
  "author": "wanhose",
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{108d0aea-9bbd-4719-a793-0bc73c1d0064}",
      "strict_min_version": "126.0",
      "update_url": "https://github.com/wanhose/cookie-dialog-monster/raw/refs/heads/main/packages/web/src/releases/mozilla-mobile/updates.json"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["scripts/content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["declarativeNetRequest", "storage", "webRequest"],
  "web_accessible_resources": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "resources": ["https://fonts.googleapis.com/css?family=Inter"]
    }
  ]
}
